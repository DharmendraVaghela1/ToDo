<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
         <item name="colorPrimary">@color/my_dark_primary</item>
         <item name="colorPrimaryVariant">@color/my_dark_primary_variant</item>
         <item name="colorOnPrimary">@color/my_dark_on_primary</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Optional: set the color of the title -->
        <item name="android:textSize">27sp</item>
    </style>

    <style name="Theme.ToDo" parent="Base.Theme.ToDo" />
    <style name="Base.Widget.AppCompat.EditText.TitleText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">#A8F2EDED</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Button.color" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Base.Widget.Material3.CardView.color" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/black_shade_2</item>
    </style>

    <style name="Base.Widget.Material3.CardView.CardBackground" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/black_shade_2</item>
    </style>


</resources>